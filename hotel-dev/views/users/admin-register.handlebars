<div class="container">
    <div class="container">
        <div class="row">
            <form class="col s12" action="/users/admin/register" method="POST">
                <h3>Admin Account Register</h3>
                <div class="input-field col s12">
                    <input id="name" type="text" name="name" class="validate" value="{{name}}" required>
                    <label for="name">Name</label>
                </div>
                <div class="input-field col s12">
                    <input id="email" type="email" name="email" class="validate" value="{{email}}" required>
                    <label for="email">Email</label>
                </div>
                <div class="input-field col s12">
                    <input id="password" type="password" name="password" class="validate" value="{{password}}" required>
                    <label for="password">Password</label>
                </div>
                <div class="input-field col s12">
                    <input id="password2" type="password" name="password2" class="validate" value="{{password2}}"
                        required>
                    <label for="password2">Confirm Password</label>
                </div>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </div>
</div>