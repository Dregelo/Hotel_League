<div class="container">
{{#each hotels}}
    <div class="carousel carousel-slider" class="center-align">
        {{#each images}}
        <a href="#" class="carousel-item">
            <img id="carousel-item" src="{{location}}">
            <form action="/hotels/photos/{{../_id}}/{{key}}?_method=DELETE" method="POST">
                <div class="fixed-action-btn">
                    <button class="btn-floating btn-large red"><i class="far fa-trash-alt"></i></button>
                </div>
            </form>
        </a>
        {{else}}
        <div class="carousel-item">
            <img id="carousel-item" src="https://s3.eu-central-1.amazonaws.com/hotel-images-hotel/default.png" style="width: 50%;">
        </div>
        {{/each}}
    </div>
    <h4>{{name}}</h4>
    
    <div class="chip">
        <i class="fas fa-phone"></i>
        <a href="tel:+49-{{phone}}">{{phone}}</a>
    </div>
    <div class="chip">
        <i class="fas fa-at"></i>
        <a href="mailto:{{email}}">{{email}}</a>
    </div>
    <div class="chip">
        <i class="fas fa-map-marked-alt"></i>
        <a href="{{webpage}}">Website</a>
    </div>
    <p>{{{description}}}</p>

    <div class="row">
        {{#each rooms}}
        <div class="col s12 m6">
            <div class="card">
                <div class="card-image">
                <div class="carousel carousel-slider" class="center-align">
                    {{#each roomImages}}
                    <div class="carousel-item">
                        <form class="right-align"action="/hotels/{{../../_id}}/photos/rooms/{{../_id}}/{{key}}?_method=DELETE" method="POST">
                                <button class="btn-floating red"><i class="far fa-trash-alt"></i> <i class="fas fa-angle-double-down"></i></button>
                        </form>
                        <img id="carousel-item" src="{{location}}">
                    </div>
                    {{else}}
                    <div class="carousel-item">
                        <img id="carousel-item" src="https://s3.eu-central-1.amazonaws.com/hotel-images-hotel/default.png" style="width: 50%;">
                    </div>
                    {{/each}}
                    </div>
                    <a class="btn-floating halfway-fab btn-large " href="/hotels/{{../_id}}/rooms/{{_id}}/edit"><i class="fas fa-pencil-alt fa-lg"></i></a>
                    <span class="card-title">{{roomName}} </span>
                </div>
                <div class="card-content">
                    <p>{{roomDescription}}</p>
                </div>
                <div class="card-action">
                    {{roomPrice}}â‚¬ / Night
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s12">
                            <div class="row">
                                <div class="input-field col s12">
                                    <form action="/hotels/{{../_id}}/rooms/{{_id}}/upload" method="POST" enctype="multipart/form-data">
                                        <div class="file-field input-field">
                                            <div class="btn">
                                                <span>File</span>
                                                <input type="file" name="images" accept=".jpg, .jpeg, .png" multiple>
                                            </div>
                                            <div class="file-path-wrapper">
                                                <button type="submit" class="waves-effect waves-light btn">Submit</button>
                                                <input type="text" class="file-path validate" placeholder="Upload images to the Room">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-action">
                    <form action="/hotels/{{../_id}}/rooms/{{_id}}?_method=DELETE" method="POST">
                        <button class="btn red"><i class="far fa-trash-alt"></i> DELETE ROOM</button>
                    </form>
                </div>
            </div>
            </div>
        {{/each}}
    </div>
    <a class="btn" href="/hotels/{{_id}}/room/add"><i class="fas fa-plus"></i> Add Room</a>
    <a class="btn" href="/hotels/edit/{{id}}"><i class="fas fa-pencil-alt"></i> Edit Hotel</a>
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <form action="/hotels/{{_id}}/photos/upload" method="POST" enctype="multipart/form-data">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="images" accept=".jpg, .jpeg, .png" multiple>
                            </div>
                            <div class="file-path-wrapper">
                                <button type="submit" class="waves-effect waves-light btn">Submit</button>
                                <input type="text" class="file-path validate" placeholder="Upload images to the Hotel">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <form class="right-align" action="/hotels/{{id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn red"><i class="fas fa-minus-circle"></i> DELETE HOTEL</button>
        </form>
    </div>
{{else}}
    <p>No hotels listed!</p>
{{/each}}
</div>