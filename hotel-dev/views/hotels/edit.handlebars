{{#each errors}}
<div class="alert alert-danger">{{ text }}</div>
{{else}}

{{/each}}
<div class="container">
    <div class="row">
        <form class="col s12" action="/hotels/{{hotel.id}}?_method=PUT" method="POST">
            <h3>Edit {{hotel.name}}</h3>
            <div class="input-field col s12">
                <input type="text" class="validate" id="name" name="name" value="{{hotel.name}}" required>
                <label class="active" for="title">Name</label>
            </div>
                
            <div class="input-field col s12">
                <input type="tel" class="validate" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{{hotel.phone}}"
                    required>
                <span class="note">Format: 123-456-7890</span>
                <label for="title">Phone Number</label>
            </div>
                
            <div class="input-field col s12">
                <input type="text" class="validate" id="webpage" name="webpage" value="{{hotel.webpage}}" required>
                <label for="title">Website</label>
            </div>
                
            <div class="input-field col s12">
                <input type="text" class="validate" id="email" name="email" value="{{hotel.email}}" required>
                <label for="title">Email</label>
            </div>
                
            <div class="input-field col s12">
                <input type="number" class="validate" id="price" name="price" value="{{hotel.price}}" required>
                <label for="title">Price per Night</label>
            </div>
                
            <div class="input-field col s12">
                <textarea class="materialize-textarea validate" id="description" name="description" required>{{hotel.description}}</textarea>
                <label for="description">Description</label>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>