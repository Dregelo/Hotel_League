{{#each errors}}
<div class="alert alert-danger">{{ text }}</div>
{{else}}

{{/each}}
<div class="container">
    <div class="row">
        <form class="col s12" action="/hotels/{{hotel.id}}/room" method="POST" enctype="multipart/form-data">
            <div class="row">
                <h3>Create New Room</h3>
                <div class="input-field col s12">
                    <input type="text" class="validate" name="roomName" id="roomName" required>
                    <label class="active" for="roomName">Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <input type="text" class="validate" id="roomDescription" name="roomDescription" required>
                    <label for="roomDescription">Room Description</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="number" class="validate" id="roomPrice" name="roomPrice" required>
                    <label for="roomPrice">Room Price</label>
                </div>
            </div>
            
            <div class="file-field input-field">
                <div class="btn">
                    <span>File</span>
                    <input type="file" name="images" accept=".jpg, .jpeg, .png" multiple>
                </div>
                <div class="file-path-wrapper">
                    <input type="text" class="file-path validate" placeholder="Upload maximum 4 images">
                </div>
            </div>

            <button type="submit" class="btn">Create Room</button>
        </form>
    </div>
</div>