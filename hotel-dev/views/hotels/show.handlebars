<div class="container">
    <h1>Welcome to {{hotel.name}}</h1>
    <div class="carousel carousel-slider" class="center-align">
        {{#each hotel.images}}
        <a href="#" class="carousel-item">
            <img id="carousel-item" src="{{location}}">
            {{#if ../superadmin}}
                <form action="/hotels/photos/{{../hotel._id}}/{{key}}?_method=DELETE" method="POST">
                    <div class="fixed-action-btn">
                        <button class="btn-floating btn-large red"><i class="far fa-trash-alt"></i></button>
                    </div>
                </form>
            {{/if}}
        </a>
        {{else}}
        <div class="carousel-item">
            <img id="carousel-item" src="https://s3.eu-central-1.amazonaws.com/hotel-images-hotel/default.png" style="width: 50%;">
        </div>
        {{/each}}
    </div>
    <div class="chip">
        <i class="fas fa-phone"></i>
        <a href="tel:+49-{{hotel.phone}}">{{hotel.phone}}</a>
    </div>
    <div class="chip">
        <i class="fas fa-at"></i>
        <a href="mailto:{{hotel.email}}">{{hotel.email}}</a>
    </div>
    <div class="chip">
        <i class="fas fa-map-marked-alt"></i>
        <a href="{{hotel.webpage}}">Website</a>
    </div>

    <p class="flow-text">{{{hotel.description}}}</p>
    
    <div class="row">
        {{#each hotel.rooms}}
            <div class="col s12 m6 ">
                <div class="card">
                    
                        <div class="carousel carousel-slider">
                            {{#each roomImages}}
                                <div class="carousel-item">
                                    {{#if ../../superadmin}}
                                    <form class="right-align" action="/hotels/{{../../hotel._id}}/photos/rooms/{{../_id}}/{{key}}?_method=DELETE" method="POST">
                                        <button class="btn-floating red"><i class="far fa-trash-alt"></i> <i class="fas fa-angle-double-down"></i></button>
                                    </form>
                                    {{/if}}
                                    <img id="carousel-item" src="{{location}}">
                                </div>
                                {{else}}
                                <div class="carousel-item">
                                    <img id="carousel-item" src="https://s3.eu-central-1.amazonaws.com/hotel-images-hotel/default.png" style="width: 50%;">
                                </div>
                            {{/each}}    
                        </div>

                    <div class="card-content">
                        <h4>{{roomName}}</h4>
                        <p>{{roomDescription}}</p>
                    </div>
                    <div class="card-action right-align">
                        {{roomPrice}}â‚¬ / Night
                    </div>
                    {{#if ../superadmin}}
                    <div class="card-action">
                        <div class="row">
                            <div class="col s12">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <form action="/hotels/{{../hotel.id}}/rooms/{{_id}}/upload" method="POST" enctype="multipart/form-data">
                                            <div class="file-field input-field">
                                                <div class="btn">
                                                    <span>File</span>
                                                    <input type="file" name="images" accept=".jpg, .jpeg, .png" multiple>
                                                </div>
                                                <div class="file-path-wrapper">
                                                    <button type="submit" class="waves-effect waves-light btn">Submit</button>
                                                    <input type="text" class="file-path validate" placeholder="Upload images to the Room">
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="card-action">
                            <div class="row">
                                <div class="col s6">
                                    <a class="btn" href="/hotels/{{../hotel._id}}/rooms/{{_id}}/edit"><i class="fas fa-pencil-alt"></i> Edit Room</a>
                                </div>
                                <div class="col s6">
                                    <form action="/hotels/{{../hotel._id}}/rooms/{{_id}}?_method=DELETE" method="POST">
                                        <button class="btn red"><i class="far fa-trash-alt"></i> DELETE ROOM</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
    
    
    {{#if superadmin}}
    <a class="btn" href="/hotels/{{hotel._id}}/room/add"><i class="fas fa-plus"></i> Add Room</a>
    <a class="btn" href="/hotels/edit/{{hotel.id}}"><i class="fas fa-pencil-alt"></i> Edit Hotel</a>
    <div class="row">
        <div class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <form action="/hotels/{{hotel._id}}/photos/upload" method="POST" enctype="multipart/form-data">
                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="images" accept=".jpg, .jpeg, .png" multiple>
                            </div>
                            <div class="file-path-wrapper">
                                <button type="submit" class="waves-effect waves-light btn">Submit</button>
                                <input type="text" class="file-path validate" placeholder="Upload maximum 4 images at a time to the Hotel">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <form class="right-align" action="/hotels/{{hotel._id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn red"><i class="fas fa-minus-circle"></i> DELETE HOTEL</button>
        </form>
    </div>
</div>
    {{/if}}