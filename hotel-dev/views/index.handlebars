<div class="container">
{{#each hotels}}
<div class="row">
    <div class="col s12">
        <h1>{{name}}</h1>
        <div class="carousel carousel-slider" class="center-align">
            {{#each images}}
            <div class="carousel-item">
                <img id="carousel-item" src="{{location}}">
            </div>
            {{else}}
            <div class="carousel-item">
                <img id="carousel-item" src="https://s3.eu-central-1.amazonaws.com/hotel-images-hotel/default.png" style="width: 50%;">
            </div>
            {{/each}}
        </div>
            <div class="chip">
                <i class="fas fa-phone"></i>
                <a href="tel:+49-{{phone}}">{{phone}}</a>
            </div>
            <div class="chip">
                <i class="fas fa-at"></i>
                <a href="mailto:{{email}}">{{email}}</a>
            </div>
            <div class="chip">
                <i class="fas fa-map-marked-alt"></i>
                <a href="{{webpage}}">Website</a>
            </div>

            <p >{{truncate (stripTags description) 400 }}</p>

            <div class="row">
                <div class="col s6">
                    <a href="/hotels/show/{{_id}}" class="btn">To Hotel</a>
                </div>
                
            </div>
        </div>
    </div>
    <div class="divider" id="mainPageDivider"></div>
{{/each}}